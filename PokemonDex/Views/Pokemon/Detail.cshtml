@model PokemonDetailViewModel

@{
	ViewData["Title"] = Model.pokemon.Name;
}

<div class="main-inner">
	<div class="content">
		<div class="pokemon-detail">
			<img class="pokemon-image" src=@("/images/"+@Model.pokemon.IndexId+".png") />
			<div><span>No.@Model.pokemon.IndexId</span> @Model.pokemon.Name</div>
		</div>
	</div>
	<div class="sidebar">
		@foreach (var pokemon in Model.pokemons)
		{
			<a asp-action="Detail" asp-route-id="@pokemon.IndexId">
				<div class="name"><span>No.@pokemon.IndexId</span> @pokemon.Name</div>
			</a>
		}
	</div>
</div>