@model PokemonDex.Models.PokemonSearch

<div class="main-inner">
    <div class="content">
        <div class="pokemon-detail">
            <h2>ポケモン検索</h2>
            <form method="post" class="search-form">
                <div class="form-group">
                    <input type="text" asp-for="IndexId" class="form-control" placeholder="図鑑No." />
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Name" class="form-control" placeholder="ポケモン名" />
                </div>
                <button type="submit" class="btn btn-pokemon">検索</button>
            </form>
        </div>
    </div>
</div>
