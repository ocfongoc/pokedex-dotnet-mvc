@model PokemonDex.Models.ViewModels.PokemonSearchViewModel

<div class="main-inner">
    <div class="content">
        <div class="pokemon-detail">
            <h2>ポケモン検索</h2>
            <form asp-controller="Pokemon" asp-action="Search" method="post" class="search-form">
                <div class="form-group">
                    <input type="text" asp-for="SearchTerm" class="form-control" placeholder="図鑑No." />
                </div>
                <div class="form-group">
                    <input type="text" asp-for="SearchTerm" class="form-control" placeholder="ポケモン名" />
                </div>
                <button type="submit" class="btn btn-primary">検索</button>
            </form>
        </div>
    </div>
    @await Html.PartialAsync("_PokemonSidebar", Model.pokemons)
</div>


@section Styles {
    <style>
        .search-form {
            width: 100%;
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            flex-direction: column
        }

        .form-group {
            width: 100%;
            flex: 1;
        }

        .form-control {
            width: 98%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .btn-primary {
            padding: 8px 16px;
            background-color: #1676c0;
            border: 1px solid #c0c0c0;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary:hover {
          opacity: 0.7;
        }
    </style>
}